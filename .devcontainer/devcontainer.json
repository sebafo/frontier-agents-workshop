{
    "name": "Frontier Agents Workshop",
    "image": "mcr.microsoft.com/devcontainers/python:3-3.12-bookworm",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/devcontainers-extra/features/uv:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "version": "latest"
        },
        "ghcr.io/azure/azure-dev/azd": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "github.copilot",
                "github.copilot-chat",
                "Upstash.context7-mcp",
                "ms-azuretools.vscode-azure-mcp-server"
            ]
        }
    },
    "postCreateCommand": "pip install --user -r requirements.txt && uv tool install specify-cli --from git+https://github.com/github/spec-kit.git && docker pull qdrant/qdrant",
    "forwardPorts": [
        8000,
        8080,
        8501,
        5000,
        8093,
        8000,
        8001,
        9999,
        6333,
        6334
    ],
    "remoteUser": "vscode",
    "remoteEnv": {
        "PATH": "/home/vscode/.local/bin:/home/linuxbrew/.linuxbrew/bin:${containerEnv:PATH}"
    }
}